<body class="hold-transition skin-blue sidebar-mini">
  <div class="wrapper">
    <%= render 'layouts/header' %>
    <div class="content-wrapper">

      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          Categories
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="#">
              <i class="fa fa-home"></i>
              Home Page</a>
          </li>
          <li class="active">Categories</li>
        </ol>
      </section>

      <section class="content">
        <div class="row">
          <div class="col-xs-12">
            <!-- Main data table -->
            <div class="box">

              <!-- /.box-header -->
              <div class="box-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Product Count</th>
                      <th>Product Qty</th>
                      <th>Edit</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @categories.each do |category| %>
                    <tr>
                      <td><%= category.name %></td>
                      <td><%= category.products.count %></td>
                      <td><%= category.products.sum(:remaining_quantity) %></td>
                      <td><%= link_to 'Edit', edit_category_path(category) %></td>
                      <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.box-body -->
            </div>
          </div>
        </div>
        <%= link_to 'Add Category', new_category_path, :class => 'btn btn-primary' %>
      </section>
    </div>
    <%= render 'layouts/footer' %>
    </div>
  <script>
    $(function () {
      $("#example1").DataTable();
      $('#example2').DataTable({
        "paging": true,
        "lengthChange": false,
        "searching": false,
        "ordering": true,
        "info": true,
        "autoWidth": false
      });
    });
  </script>
</body>
